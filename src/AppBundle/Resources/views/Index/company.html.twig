{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <div class="col-xs-2">
        <h2 class="sub-header"><a href="/">Home</a></h2>
        <p type="button" class="btn btn-primary btn-lg btn-block">Companies</p>
        {% for company in companies %}
            <a class="btn btn-default btn-lg btn-block" href="{{ company.name }}">{{ company.name }}</a>
        {% endfor %}
    </div>
    <div class="col-xs-10">
        <h2 class="sub-header">Products of {{ company_name }} </h2>
        <p type="button" class="btn btn-primary btn-sm">Product name</p>
        <hr/>
        {% for product in pagination %}
            <a type="button" class="btn btn-default btn-sm" href="{{ app.request.uri }}/{{ product.name }}">{{ product.name }}</a>
            <br>
        {% endfor %}
        <div class="text-center">
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}